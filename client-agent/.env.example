# Google API Key for Gemini
GOOGLE_API_KEY=your_api_key_here

# Client Wallet Configuration
# IMPORTANT: This wallet will SPEND tokens. Keep private key secure!
WALLET_PRIVATE_KEY=0xYourClientPrivateKeyHere

# Blockchain RPC Configuration
BASE_SEPOLIA_RPC_URL=https://base-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Merchant Agent URL
MERCHANT_AGENT_URL=http://localhost:10000/agents/merchant

